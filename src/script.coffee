  highlight: ->
    $('#content p,ul,li').highlight(@words,{ wordsOnly: true })

  JiraHighlight: ->
    auth = btoa(@options["username"]+':'+@options["username"])
    $.getJSON "https://singularity.jira.com/rest/api/2/search?jql=project%20%3D%20CORE%20AND%20issuetype%20%3D%20Bug%20AND%20affectedVersion%20>%204.1%20AND%20affectedVersion%20<%204.2.1%20AND%20(status%20%3D%20%22In%20Progress%22%20or%20resolution%20not%20in%20(%22Cannot%20Reproduce%22%2CDuplicate%2C%22Not%20a%20bug%22%2C%22By%20Design%22%2C%22No%20Response%22%2C%22No%20Work%20Required%22))%20AND%20priority%20>%3D%20P3%20AND%20Severity%20in%20(S1%2CS2%2CS3)&fields=resolution,fixVersions,versions,status,issuetype,summary",
      headers: "Authorization": "Basic " + auth,
      (data) =>
        issue_text = ""
        for issue in data.issues
          issue_text += ' ' + issue.fields.summary
        issue_text = issue_text.toLowerCase()
        @words = issue_text.split(' ')
        frequencies = {}
        for word in @words
          if word not in stop_words
            if word.length > 1
              frequencies[word] = frequencies[word] || 0
              frequencies[word]++
        @words = Object.keys( frequencies )
        @words.sort (a,b) => frequencies[b] - frequencies[a]
        @highlight()

